.SUFFIXES: .cpp.cc 

.cpp.o:
	gcc -x c++ $(INC) -c $< -o $*.o

.cc.o:
	gcc -x c++ $(INC) -c $< -o $*.o


#.cpp.o:
#	gcc -x c++ $(INC) -c $<

all: yacas-static


fastprimes.o:
	gcc -x c++ mkfastprimes.cpp -o mkfastprimes
	./mkfastprimes > fastprimes.c
	gcc -c fastprimes.c

INC = -I./plat/linux32/  -I../../src/ -I../../src/plat/linux32 $(DEFINES)  -I../ -I./ -O9 -Wall -pedantic 

yacas-static : fastprimes.o $(OBJS)
	g++ $(OBJS) -lstdc++  -o yacas-static
	strip yacas-static


        
