  -DPLATFORM_OS=\"Generic\" \
  -DPLUGIN_HANDLER="ElfDll " \
  -DPLUGIN_DIR="\"./\"" \
  -DEXE_DLL_PLUGINS

  
# ACCEPT_TYPE_ARG1 int
# ACCEPT_TYPE_ARG2 struct sockaddr *


# -DHAVE_CONFIG_H

