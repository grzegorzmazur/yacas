/* This makes sure that the $srcdir gets included in the path */
SystemCall("echo 'DefaultDirectory(\"'$srcdir/'\");' > tmp.find-srcdir");
SystemCall("echo 'DefaultDirectory(\"'$srcdir/in/'\");' >> tmp.find-srcdir");
Load("tmp.find-srcdir");
SystemCall("rm tmp.find-srcdir");

SetHtmlDirectory("");
Use("styleplain");  /* style sheet for the documentation */
Use("manualmaker"); /* engine that renders book to html */

InitBooks();        /* Initialize book building */

InitBook("ref");
Load("ref.book");

SelectBook("ref");
EmitHtmlSimple();


