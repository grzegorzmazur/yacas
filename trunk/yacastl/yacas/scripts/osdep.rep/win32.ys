/// Win32-specific functions.

/// These functions should return the command line necessary to accomplish tasks.

DeleteFileCmd(filename) := "del \"" : filename : "\"";

DeleteDirCmd(dirname) := "deltree /y \"" : dirname : "\"";

CopyFileCmd(filename1, filename2) := "copy /b \"" : filename1 : "\" \"" : filename2 : "\" /y";

MakeDirCmd(dirname) := "md \"" : dirname : "\"";

ChangeDirCmd(dirname) := "cd \"" : dirname : "\"";

PrintFileCmd(filename) := "type \"" : filename : "\"";

// execute a given command in the background
BackgroundCmd(command'line) := "start " : command'line;

/// These functions should return some system-dependent strings.

TemporaryDir() := ".";	// the only other alternative %TEMP% doesn't work in ToFile() calls.

NullFileName() := "nul.";

// this is a cludge - I don't know how to create a temporary file in DOS
TemporaryFile() := "yacas.tmp";

// this depends on PS files being associated to a viewer (GSview does this)
PSViewer() := "start";
